<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--<com.github.minhnguyen31093.diagonal.DiagonalView-->
    <!--android:id="@+id/diagonalView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <com.github.minhnguyen31093.diagonal.DiagonalRelativeLayout
        android:id="@+id/diagonalRelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_alignBottom="@+id/diagonalRelativeLayout1"
        android:layout_marginBottom="64dp"
        android:background="#BBBBBB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:rotation="-28"
            android:text="2"
            android:textColor="#000000"
            android:textSize="32sp" />

    </com.github.minhnguyen31093.diagonal.DiagonalRelativeLayout>

    <com.github.minhnguyen31093.diagonal.DiagonalRelativeLayout
        android:id="@+id/diagonalRelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_alignBottom="@+id/diagonalRelativeLayout"
        android:layout_marginBottom="64dp"
        android:background="#888888">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:rotation="-28"
            android:text="1"
            android:textColor="#000000"
            android:textSize="32sp" />

    </com.github.minhnguyen31093.diagonal.DiagonalRelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/diagonalRelativeLayout1"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="56dp"
        android:rotation="-28"
        android:src="@drawable/goodbye"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_width="0.2dp" />

    <com.github.minhnguyen31093.diagonal.DiagonalRelativeLayout
        android:id="@+id/diagonalRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_alignParentBottom="true"
        android:background="#333333">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:rotation="-28"
            android:text="0"
            android:textColor="#000000"
            android:textSize="32sp" />
    </com.github.minhnguyen31093.diagonal.DiagonalRelativeLayout>


</RelativeLayout>